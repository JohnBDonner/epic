{
  "manifest_version": 2,

  "name": "Epic",
  "description": "A new tab page with everything you need to get right to where you want to go, be productive, and be inspired.",
  "version": "1.0",

  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "epic.html"
  },
  "browser_action": {
    "default_popup": "epic.html"
  },
  "background": {
    "scripts": ["js/vendor/angular.min.js"]
  },
  "permissions": [
    "geolocation",
    "storage",
    "http://api.wunderground.com/api/",
    "http://autocomplete.wunderground.com/api"
  ]
}